{
  "parserOptions": {
    "ecmaVersion": 6,
  },
  "rules": {
    "quotes": [2, single],
    "semi": [2, never],
    "indent": [2, 2],
    "comma-dangle": [2, always-multiline],
    "no-multi-spaces": [2, {ignoreEOLComments: true}],
    "no-mixed-spaces-and-tabs": [2],
    "space-before-blocks": [2, always],
    "space-infix-ops": [2],
    "keyword-spacing": [2, {after: true}],
    "curly": [2, all]

  }
}
